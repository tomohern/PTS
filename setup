#!/bin/bash
#
#Update and install needed software
#
apt update
unattended-upgrades -d
apt install openjdk-8-jre-headless
apt install unzip
#
# Create new user to run PT as 
#
read -p "Create New User? (If not, will continue as Root)" -n 1 -r
echo    # (optional) move to a new line
if [[ $REPLY =~ ^[Yy]$ ]]
then
    echo Enter Desired Username:
    read uname
    adduser $uname
    usermod -aG sudo $uname
    echo Please execute 'downloadLatestPT'
    su - $uname
    exit
else
downloadLatestPT
fi
#
#Install needed scripts
#
sudo curl https://raw.githubusercontent.com/tomohern/PTS/scripts/updatescripts > /home/$uname/updatescripts
sudo chmod +x /home/$uname/updatescripts
updatescripts
